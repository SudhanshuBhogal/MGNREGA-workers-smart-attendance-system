<%- include("partials/header") %>
<div class="bg-gradient-primary" style="padding-top: 56px;">
    <div class="container py-5">

        <div class="card o-hidden border-0 shadow-lg">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Registration - Worker</h1>
                                <hr>
                            </div>
                            <form class="user" action="/worker" method="post" enctype="multipart/form-data">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user" id="first-name"
                                        name = "worker[firstName]" placeholder="First Name">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control form-control-user" id="last-name"
                                        name = "worker[lastName]" placeholder="Last Name">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-user" id="address-line-1"
                                    name = "worker[addressLine]" placeholder="Address Line 1">
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control form-control-user" id="w-State"
                                            name="worker[state]" placeholder="State">
                                    </div>
                                    <div class="col-sm-4 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user" id="w-district"
                                            name="worker[district]" placeholder="District">
                                    </div>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control form-control-user" id="w-pincode"
                                            name="worker[pincode]" placeholder="pincode">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user" id="w-block"
                                            name="worker[block]" placeholder="Block">
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user" id="w-panchayat"
                                            name="worker[panchayat]" placeholder="Panchayat">
                                    </div>
                                </div >
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user" id="w-job-card-id"
                                        name = "worker[jobCardId]" placeholder="Job Card Id">
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user" id="w-family-id"
                                        name = "worker[familyId]" placeholder="Family Id">
                                    </div>
                                </div >
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-user" id="w-aadhar-number"
                                    name = "worker[aadharNumber]" placeholder="Aadhar Number">
                                </div>
                                <div class="form-group">
                                    <input type="file" class="form-control form-control-user" id="w-face-image" name = "faceImage" >
                                </div>
                                <hr>
                                <button type="submit" href="#" class="btn btn-primary btn-user btn-block">
                                    Register Worker
                                </button>
                            </form>
                            <hr>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<%- include("partials/footer") %>